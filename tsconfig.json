{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "es2020",
  "module": "es2020",
    "jsx": "react-native",
    "lib": [
      "es2020"
    ],
  "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    // üõë ESTA ES LA √öNICA L√çNEA QUE FALTA
    "allowImportingTsExtensions": true
  }
}